# Source OLTP via REST API Gateway (required)
GATEWAY_BASE_URL=http://localhost:4000
ETL_API_USERNAME=etl_admin_user
ETL_API_PASSWORD=etl_admin_password
ETL_API_PAGE_SIZE=200

# Optional: direct OLTP SQL credentials (only for deep reconciliation scripts if needed)
OLTP_PGHOST=localhost
OLTP_PGPORT=5432
OLTP_PGDATABASE=erp_distribution
OLTP_PGUSER=postgres
OLTP_PGPASSWORD=change_me

# Cible OLAP/DWH (peut etre la meme instance PostgreSQL, base differente recommandee)
OLAP_PGHOST=localhost
OLAP_PGPORT=5432
OLAP_PGDATABASE=erp_distribution_olap
OLAP_PGUSER=postgres
OLAP_PGPASSWORD=change_me

# Pipeline
ETL_BATCH_SIZE=5000
ETL_LOOKBACK_HOURS=24
ETL_RUN_ID=manual
